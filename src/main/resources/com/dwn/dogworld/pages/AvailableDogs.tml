<html t:type="layout" t:title="DogWorld Nigeria - Home"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
      <div class="content">
                <div class="container">
                    <div class="col-md-12  animated fadeInDown">
                        <div class="container">
                            <!-- Begin of rows -->
                            <div class="row carousel-row">
                                <div class="col-xs-12 col-md-8 col-md-offset-2 slide-row">
                                    <div id="carousel-1" class="carousel slide slide-carousel" data-ride="carousel">
                                        <!-- Indicators -->
                                        <ol class="carousel-indicators">
                                            <li data-target="#carousel-1" data-slide-to="0" class="active"></li>
                                            <li data-target="#carousel-1" data-slide-to="1"></li>
                                            <li data-target="#carousel-1" data-slide-to="2"></li>
                                        </ol>

                                        <!-- Wrapper for slides -->
                                        <div class="carousel-inner">
                                            <div class="item active">
                                                <img src="ufd_assets/img/1.jpg"   alt="Image" />
                                            </div>
                                            <div class="item">
                                                <img src="ufd_assets/img/img.jpg" alt="Image" />
                                            </div>
                                            <div class="item">
                                                <img src="ufd_assets/img/img.jpg" alt="Image" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="slide-content">
                                        <div class="row" style="padding-left: 13px; margin-bottom: 5px;">
                                            <div class="col-xs-10">
                                                <h4>SASHARITUS BONGI</h4>
                                            </div>
                                            <div class="col-xs-2">
                                                <span class="pull-right"><i class="ion-male fa-md green"></i> <strong>Male</strong></span>
                                            </div>
                                        </div>
                                        <div class="row fa-boxx" style="padding-left: 13px">
                                            <div class="col-xs-10">
                                                <span>
                                                    <span><i class="ion-network"></i> <strong>Breed:</strong></span> Big Head Breed
                                                </span><br/>
                                                <span>
                                                    <span><i class="ion-calendar"></i> DOB:</span> 10<sup>th</sup> May 2012
                                                </span>
                                                <span><br/>
                                                    <span><i class="ion-network"></i> <strong>Location:</strong></span> Lagos Nigeria
                                                </span><br/>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="slide-footer">
                                        <span class="pull-right buttons">
                                            <button class="btn btn-sm btn-secondary" data-toggle="modal" data-target="#myModal"><i class="fa fa-fw fa-eye"></i> Request Dog</button>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-md-6 col-md-offset-2 pull-right">
                                    <ul class="pagination pagination-alt">
                                        <li>
                                            <a href="javascript:void(0);"><i class="fa fa-angle-left"></i></a>
                                        </li>
                                        <li>
                                            <a href="javascript:void(0);">1</a>
                                        </li>
                                        <li>
                                            <a href="javascript:void(0);">2</a>
                                        </li>
                                        <li>
                                            <a href="javascript:void(0);">3</a>
                                        </li>
                                        <li class="active">
                                            <a href="javascript:void(0);">4</a>
                                        </li>
                                        <li>
                                            <a href="javascript:void(0);">5</a>
                                        </li>
                                        <li>
                                            <a href="javascript:void(0);"><i class="fa fa-angle-right"></i></a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog ">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title" id="myModalLabel">
                            <span class="t-al-center" style="padding-bottom: 30px;"><span class="fa ion-ios7-lightbulb-outline"></span>&nbsp;Request this dog </span>
                        </h4>
                    </div>
                    <div class="modal-body">
                        <form class="form account-form" method="POST" t:id="dogRequestForm">
                            <div class="form-group">
                                <label class="">Your location*</label>
                                <input type="text" class="form-control" id="signup-fullname" placeholder="" tabindex="2" />
                            </div>
                            <div class="form-group">
                                <label class="">Your Email*</label>
                                <input type="text" class="form-control" id="signup-fullname" placeholder="" tabindex="2" />
                            </div>
                            <div class="form-group">
                                <label class="">Your Phone Number*</label>
                                <input type="text" class="form-control" id="signup-fullname" placeholder="" tabindex="2" />
                            </div>
                            <div class="form-group">
                                <label for="textarea-input">Other Information</label>
                                <textarea data-required="true" data-minlength="5" name="textarea-input" id="textarea-input" cols="10" rows="2" class="form-control parsley-validated"></textarea>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-secondary" tabindex="6">
                                    Submit Request &nbsp; <i class="fa fa-play-circle"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
</html>